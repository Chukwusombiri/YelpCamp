<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center">Edit Campground</h1>
            <form action="/campgrounds/<%= campground._id %>?_method=PATCH" method="post" enctype="multipart/form-data"
                class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="campground[title]" value="<%= campground.title %>"
                        id="title" aria-describedby="titleHelp" required>
                    <div id="titleHelp" class="form-text">Enter any self-explanatory title for make it intereting.</div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" name="campground[location]"
                        value="<%= campground.location %>" id="location" aria-describedby="locationHelp" required>
                    <div id="locationHelp" class="form-text">Use format: City, State.</div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Campground Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="price" name="campground[price]"
                            value="<%= campground.price %>" aria-label="Amount (to the nearest dollar)" required>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Add Campground images</label>
                    <input type="file" name="images" id="images" class="form-control" multiple>
                    <ul class="list-images d-none mt-2">
                    </ul>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" rows="3"
                        required><%= campground.description %></textarea>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach((img, index) => { %>
                        <img src="<%= img.thumbnail %>" alt="<%= img.filename %>" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="image-<%= index %>" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= index %>">Delete Image? </label>
                    <% }) %>
                </div>
                <button type="submit" class="btn btn-info">Update Campground</button>
            </form>
            <div class="mt-4 text-center"><a href="/campgrounds/<%= campground._id %>"
                    class="link-opacity-75-hover">Return to view campground</a></div>
        </div>
    </div>